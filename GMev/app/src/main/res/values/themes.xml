<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GMev" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#184E77</item>
        <item name="colorPrimaryVariant">#1E6091</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#1A759F</item>
        <item name="colorSecondaryVariant">#168AAD</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_65sdp</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:elevation">@dimen/_5sdp</item>
    </style>
    <style name="Button" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="AccountInput" parent="@style/Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:drawablePadding">@dimen/_15ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:elevation">@dimen/_10sdp</item>
    </style>

    <style name="BlankInput" parent="@style/Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/underline</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:drawablePadding">@dimen/_15ssp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
        <item name="android:elevation">@dimen/_10sdp</item>
    </style>

    <style name="Label" parent="@style/Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:drawablePadding">@dimen/_15ssp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
        <item name="android:elevation">@dimen/_10sdp</item>
    </style>

    <style name="SectionTitle" parent="@style/TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/_25ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">@dimen/_20sdp</item>
    </style>
    <style name="textButton" parent="@style/TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="text" parent="@style/TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>
    <style name="buttonCard" parent="@style/Widget.MaterialComponents.CardView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="cardBackgroundColor">?attr/colorSecondary</item>
        <item name="cardCornerRadius">@dimen/_16sdp</item>
        <item name="cardElevation">@dimen/_7sdp</item>
    </style>
    <style name="logoutCard" parent="@style/Widget.MaterialComponents.CardView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="cardBackgroundColor">?attr/colorSecondary</item>
        <item name="cardCornerRadius">@dimen/_16sdp</item>
        <item name="cardElevation">@dimen/_7sdp</item>
    </style>
    <style name="cardImage">
        <item name="android:layout_width">@dimen/_90sdp</item>
        <item name="android:layout_height">@dimen/_90sdp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/_20sdp</item>
    </style>
    <style name="toggleButton" parent="@style/Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="strokeColor">?attr/colorSecondary</item>
    </style>
</resources>